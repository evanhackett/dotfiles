[user]
	name = evanhackett
	email = evanwhackett@gmail.com
[credential]
	helper = store
[github]
	user = evanhackett
[push]
	default = simple
[color]
    ui = auto

[core]
	editor = nvim
    excludesfile = ~/.gitignore_global
    pager = delta

[delta]
    syntax-theme = Dracula
    line-numbers = true
    

[interactive]
    diffFilter = delta --color-only

[alias]
	lg = log --graph --pretty=format:'%C(auto)%h -%d %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'

# git mergetool
[merge]
    tool = vimdiff
    keepBackup = false
